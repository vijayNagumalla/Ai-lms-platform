# Environment Variables for MySQL Workbench Deployment
# Copy this to .env and update with your values

# Database Configuration (MySQL Workbench)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=lms_platform
DB_PORT=3306

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_key_here_1756976033027
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=production
PORT=3000

# Frontend URL (update after deployment)
FRONTEND_URL=https://your-app.vercel.app

# Judge0 Configuration (for coding problems)
JUDGE0_API_URL=https://judge0-ce.p.rapidapi.com
JUDGE0_RAPIDAPI_KEY=your_rapidapi_key

# Super Admin Registration
SUPER_ADMIN_REGISTRATION_CODE=SUPER_ADMIN_2024

# Instructions:
# 1. Update DB_HOST to your MySQL server IP if not local
# 2. Update DB_USER and DB_PASSWORD with your MySQL credentials
# 3. Get Judge0 API key from https://rapidapi.com
# 4. Update FRONTEND_URL after Vercel deployment
