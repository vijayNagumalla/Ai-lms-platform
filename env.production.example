# Production Environment Configuration for 5000+ Concurrent Users

# Database Configuration
DB_HOST=mysql
DB_USER=lms_user
DB_PASSWORD=your_secure_password_here
DB_NAME=lms_platform
DB_PORT=3306
DB_CONNECTION_LIMIT=100
DB_QUEUE_LIMIT=50
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_SSL=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TLS=false

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_64_characters
JWT_EXPIRES_IN=7d

# Server Configuration
NODE_ENV=production
PORT=5000
MAX_REQUEST_SIZE=10mb

# Frontend URL
FRONTEND_URL=https://your-domain.com

# Docker Code Execution
DOCKER_MAX_POOL_SIZE=10
DOCKER_MAX_CONCURRENT=50
DOCKER_MEMORY_LIMIT=256m
DOCKER_TIMEOUT=5000
DOCKER_CONTAINER_POOLING=true

# Judge0 Configuration
JUDGE0_URL=http://judge0:2358
JUDGE0_API_KEY=your_judge0_api_key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Super Admin Registration
SUPER_ADMIN_REGISTRATION_CODE=SUPER_ADMIN_2024

# Monitoring
GRAFANA_PASSWORD=your_grafana_password

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
SESSION_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
